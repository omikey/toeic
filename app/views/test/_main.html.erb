    <tr>
      <td style="font-size:1.3em; padding-bottom: 1em;">
        Listening
      </td>
    </tr>
    <tr ng-repeat="link in '1234'">
      <td>
        <input type="checkbox" id="{{link}}">
        <span onclick="$($(this).parent().children().get(0)).click();" style="font-size:1.6em; text-decoration: underline; cursor: pointer;">Part {{link}}</span>
      </td>
    </tr>
    <tr>
      <td style="font-size:1.3em; padding-bottom: 1em; padding-top: 1em;">
