      </td>
    </tr>
    <tr>
      <td style="font-size:1.3em; padding-bottom: 1em; padding-top: 1em;">
        Test Simulation
      </td>
    </tr>
    <tr ng-repeat="link in ['Listening','Reading','All Sections']">
      <td ng-click="chooseSection()">
        <input type="radio" value="{{$index}}" class="circles" name="circles">
        <span onclick="$($(this).parent().children().get(0)).click()" style="font-size:1.6em; text-decoration: underline; cursor: pointer;">{{link}}</span>
      </td>
    </tr>
    <td>
